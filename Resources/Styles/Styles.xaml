<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base Styles -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <!-- Frame Styles -->
    <Style TargetType="Frame" x:Key="CardFrame">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
        <Setter Property="BorderColor" Value="{StaticResource Gray100}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <!-- Button Styles -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16,8" />
    </Style>

    <!-- Dashboard Specific Styles -->
    <Style x:Key="DashboardStatLabel" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="DashboardStatTitle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>

    <!-- Keep any existing styles you need -->
</ResourceDictionary>