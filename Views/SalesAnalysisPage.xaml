<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:ScoreCard.ViewModels"
             xmlns:models="clr-namespace:ScoreCard.Models"
             xmlns:controls="clr-namespace:ScoreCard.Controls"
             x:Class="ScoreCard.Views.SalesAnalysisPage"
             x:DataType="vm:SalesAnalysisViewModel"
             BackgroundColor="#F8F9FA"
             Title="Sales Analysis">

    <Grid RowDefinitions="Auto,*">
        <!-- View Type Selector and Date Range -->
        <Grid Grid.Row="0" 
              Padding="20,10"
              BackgroundColor="White"
              ColumnDefinitions="Auto,*,Auto">

            <!-- Summary/Detailed Toggle -->
            <HorizontalStackLayout Grid.Column="0">
                <Border Stroke="#FF3B30"
                        StrokeThickness="1"
                        BackgroundColor="#FF3B30"
                        StrokeShape="RoundRectangle 4,0,0,4"
                        HeightRequest="36">
                    <Label Text="Summary"
                           TextColor="White"
                           VerticalOptions="Center"
                           Margin="20,0"/>
                </Border>
                <Border Stroke="#FF3B30"
                        StrokeThickness="1"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 0,4,4,0"
                        HeightRequest="36">
                    <Label Text="Detailed"
                           TextColor="#FF3B30"
                           VerticalOptions="Center"
                           Margin="20,0"/>
                </Border>
            </HorizontalStackLayout>

            <!-- Empty Space -->
            <BoxView Grid.Column="1"/>

            <!-- Date Picker -->
            <controls:CustomDatePicker Grid.Column="2"
                                     StartDate="{Binding StartDate}"
                                     EndDate="{Binding EndDate}"/>
        </Grid>
        <!-- Main Content -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- KPI Cards -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="20">
                    <!-- Total Sales -->
                    <Border Grid.Column="0"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White">
                        <VerticalStackLayout Padding="15">
                            <Label Text="Total Sales"
                                   TextColor="#666666"
                                   FontSize="14"/>
                            <Label Text="$8.57M"
                                   TextColor="#FF3B30"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="0,5,0,0"/>
                            <Label Text="85.7% of target"
                                   TextColor="#666666"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- YTD Achievement -->
                    <Border Grid.Column="1"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White">
                        <VerticalStackLayout Padding="15">
                            <Label Text="YTD Achievement"
                                   TextColor="#666666"
                                   FontSize="14"/>
                            <Label Text="85.7%"
                                   TextColor="Black"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="0,5,0,0"/>
                            <Label Text="vs 100% target"
                                   TextColor="#666666"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Total Margin -->
                    <Border Grid.Column="2"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White">
                        <VerticalStackLayout Padding="15">
                            <Label Text="Total Margin"
                                   TextColor="#666666"
                                   FontSize="14"/>
                            <Label Text="$2.5M"
                                   TextColor="#4CAF50"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="0,5,0,0"/>
                            <Label Text="25% margin rate"
                                   TextColor="#666666"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Remaining Target -->
                    <Border Grid.Column="3"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White">
                        <VerticalStackLayout Padding="15">
                            <Label Text="Remaining Target"
                                   TextColor="#666666"
                                   FontSize="14"/>
                            <Label Text="$1.43M"
                                   TextColor="#0066CC"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="0,5,0,0"/>
                            <Label Text="14.3% to achieve"
                                   TextColor="#666666"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Charts Area -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                    <!-- Target vs Achievement Chart -->
                    <Border Grid.Column="0"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            HeightRequest="300">
                        <VerticalStackLayout Padding="15">
                            <Label Text="Target vs Achievement"
                                   TextColor="#1A1A1A"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <!-- Chart will be added here -->
                        </VerticalStackLayout>
                    </Border>

                    <!-- Achievement Trend Chart -->
                    <Border Grid.Column="1"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White"
                            HeightRequest="300">
                        <VerticalStackLayout Padding="15">
                            <Label Text="Achievement Trend"
                                   TextColor="#1A1A1A"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <!-- Chart will be added here -->
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Sales Leaderboard -->
                <Border Stroke="#E5E7EB"
                        StrokeThickness="1"
                        BackgroundColor="White">
                    <VerticalStackLayout Padding="15">
                        <Label Text="Sales Leaderboard"
                               TextColor="#1A1A1A"
                               FontSize="16"
                               FontAttributes="Bold"
                               Margin="0,0,0,15"/>

                        <Grid ColumnDefinitions="2*,*,*,*" 
                              Padding="15,10"
                              BackgroundColor="#F9FAFB">
                            <Label Grid.Column="0" 
                                   Text="Sales Rep" 
                                   TextColor="#666666"/>
                            <Label Grid.Column="1" 
                                   Text="Achievement" 
                                   TextColor="#666666"/>
                            <Label Grid.Column="2" 
                                   Text="Commission" 
                                   TextColor="#666666"/>
                            <Label Grid.Column="3" 
                                   Text="Achievement %" 
                                   TextColor="#666666"/>
                        </Grid>

                        <!-- Sample Leaderboard Data -->
                        <Grid ColumnDefinitions="2*,*,*,*" 
                              Padding="15,12">
                            <Label Grid.Column="0" Text="Pourya"/>
                            <Label Grid.Column="1" Text="$70,000"/>
                            <Label Grid.Column="2" Text="$0"/>
                            <Label Grid.Column="3" Text="100.0%"/>
                        </Grid>
                        <Grid ColumnDefinitions="2*,*,*,*" 
                              Padding="15,12">
                            <Label Grid.Column="0" Text="Tracy"/>
                            <Label Grid.Column="1" Text="$37,877"/>
                            <Label Grid.Column="2" Text="$0"/>
                            <Label Grid.Column="3" Text="100.0%"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Indicator -->
        <Grid Grid.RowSpan="2" 
              BackgroundColor="#80000000"
              IsVisible="{Binding IsLoading}">
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                             HorizontalOptions="Center" 
                             VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>