<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:ScoreCard.ViewModels"
             xmlns:models="clr-namespace:ScoreCard.Models"
             xmlns:controls="clr-namespace:ScoreCard.Controls"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             x:Class="ScoreCard.Views.SalesAnalysisPage"
             x:DataType="vm:SalesAnalysisViewModel"
             BackgroundColor="#F8F9FA"
             Title="Sales Analysis">

    <Grid RowDefinitions="Auto,*">
        <!-- View Type Selector and Date Range -->
        <Grid Grid.Row="0" 
              Padding="20,10"
              BackgroundColor="White"
              ColumnDefinitions="Auto,*,Auto">

            <!-- Summary/Detailed Toggle -->
            <HorizontalStackLayout Grid.Column="0">
                <Border Stroke="#FF3B30"
                        StrokeThickness="1"
                        BackgroundColor="{Binding IsSummaryView, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#FF3B30,Transparent'}"
                        StrokeShape="RoundRectangle 4,0,0,4"
                        HeightRequest="36">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SwitchViewCommand}" CommandParameter="summary"/>
                    </Border.GestureRecognizers>
                    <Label Text="Summary"
                           TextColor="{Binding IsSummaryView, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White,#FF3B30'}"
                           VerticalOptions="Center"
                           Margin="20,0"/>
                </Border>
                <Border Stroke="#FF3B30"
                        StrokeThickness="1"
                        BackgroundColor="{Binding IsSummaryView, Converter={StaticResource InverseBoolToColorConverter}, ConverterParameter='#FF3B30,Transparent'}"
                        StrokeShape="RoundRectangle 0,4,4,0"
                        HeightRequest="36">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SwitchViewCommand}" CommandParameter="detailed"/>
                    </Border.GestureRecognizers>
                    <Label Text="Detailed"
                           TextColor="{Binding IsSummaryView, Converter={StaticResource InverseBoolToColorConverter}, ConverterParameter='White,#FF3B30'}"
                           VerticalOptions="Center"
                           Margin="20,0"/>
                </Border>
            </HorizontalStackLayout>

            <!-- Empty Space -->
            <BoxView Grid.Column="1"/>

            <!-- Date Picker -->
            <controls:CustomDatePicker Grid.Column="2"
                          StartDate="{Binding StartDate, Mode=TwoWay}"
                          EndDate="{Binding EndDate, Mode=TwoWay}"/>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="20">
                <!-- KPI Cards -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="20">
                    <!-- Total Sales -->
                    <Border Grid.Column="0"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White">
                        <VerticalStackLayout Padding="15">
                            <Label Text="Total Sales"
                                   TextColor="#666666"
                                   FontSize="14"/>
                            <Label Text="{Binding Summary.TotalAchievement, StringFormat='${0:N2}M'}"
                                   TextColor="#FF3B30"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="0,5,0,0"/>
                            <Label Text="{Binding Summary.AchievementPercentage, StringFormat='{0:N1}% of target'}"
                                   TextColor="#666666"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- YTD Achievement -->
                    <Border Grid.Column="1"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White">
                        <VerticalStackLayout Padding="15">
                            <Label Text="YTD Achievement"
                                   TextColor="#666666"
                                   FontSize="14"/>
                            <Label Text="{Binding Summary.AchievementPercentage, StringFormat='{0:N1}%'}"
                                   TextColor="Black"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="0,5,0,0"/>
                            <Label Text="vs 100% target"
                                   TextColor="#666666"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Total Margin -->
                    <Border Grid.Column="2"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White">
                        <VerticalStackLayout Padding="15">
                            <Label Text="Total Margin"
                                   TextColor="#666666"
                                   FontSize="14"/>
                            <Label Text="{Binding Summary.TotalMargin, StringFormat='${0:N2}M'}"
                                   TextColor="#4CAF50"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="0,5,0,0"/>
                            <Label Text="{Binding Summary.MarginPercentage, StringFormat='{0}% margin rate'}"
                                   TextColor="#666666"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Remaining Target -->
                    <Border Grid.Column="3"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            BackgroundColor="White">
                        <VerticalStackLayout Padding="15">
                            <Label Text="Remaining Target"
                                   TextColor="#666666"
                                   FontSize="14"/>
                            <Label Text="{Binding Summary.RemainingTarget, StringFormat='${0:N2}M'}"
                                   TextColor="#0066CC"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="0,5,0,0"/>
                            <Label Text="{Binding Summary.RemainingTargetPercentage, StringFormat='{0:N1}% to achieve'}"
                                   TextColor="#666666"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Charts Area -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="20">
                    <!-- Target vs Achievement Chart -->
                    <Border Grid.Column="0"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 4"
                            BackgroundColor="White">
                        <Grid RowDefinitions="Auto,*" Padding="15">
                            <Label Text="Target vs Achievement"
                                   TextColor="#1A1A1A"
                                   FontSize="16"
                                   FontAttributes="Bold"/>
                            <chart:SfCartesianChart Grid.Row="1" 
                       Margin="0,10,0,0"
                       HeightRequest="300">
                                <chart:SfCartesianChart.Legend>
                                    <chart:ChartLegend/>
                                </chart:SfCartesianChart.Legend>

                                <chart:SfCartesianChart.XAxes>
                                    <chart:CategoryAxis ShowMajorGridLines="True"
                           LabelRotation="315"
                           EdgeLabelsDrawingMode="Shift">
                                        <chart:CategoryAxis.MajorGridLineStyle>
                                            <chart:ChartLineStyle StrokeWidth="1" 
                                    StrokeDashArray="5,5"/>
                                        </chart:CategoryAxis.MajorGridLineStyle>
                                    </chart:CategoryAxis>
                                </chart:SfCartesianChart.XAxes>

                                <chart:SfCartesianChart.YAxes>
                                    <chart:NumericalAxis Minimum="0"
                            Maximum="{Binding YAxisMaximum}"
                            Interval="2"
                            ShowMajorGridLines="True">
                                        <chart:NumericalAxis.MajorGridLineStyle>
                                            <chart:ChartLineStyle StrokeWidth="1" 
                                    StrokeDashArray="5,5"/>
                                        </chart:NumericalAxis.MajorGridLineStyle>
                                    </chart:NumericalAxis>
                                </chart:SfCartesianChart.YAxes>

                                <chart:SfCartesianChart.Series>
                                    <chart:ColumnSeries ItemsSource="{Binding TargetVsAchievementData}"
                           XBindingPath="Label"
                           YBindingPath="Target"
                           Label="Target"
                           ShowDataLabels="True">
                                        <chart:ColumnSeries.Fill>
                                            <SolidColorBrush Color="#6B46C1"/>
                                        </chart:ColumnSeries.Fill>
                                    </chart:ColumnSeries>

                                    <chart:ColumnSeries ItemsSource="{Binding TargetVsAchievementData}"
                           XBindingPath="Label"
                           YBindingPath="Achievement"
                           Label="Achievement"
                           ShowDataLabels="True">
                                        <chart:ColumnSeries.Fill>
                                            <SolidColorBrush Color="#4CAF50"/>
                                        </chart:ColumnSeries.Fill>
                                    </chart:ColumnSeries>
                                </chart:SfCartesianChart.Series>
                            </chart:SfCartesianChart>

                            <!-- Achievement Trend Chart -->
                            <chart:SfCartesianChart Grid.Row="1" 
                       Margin="0,10,0,0"
                       HeightRequest="300">
                                <chart:SfCartesianChart.XAxes>
                                    <chart:CategoryAxis ShowMajorGridLines="True"
                           LabelRotation="315"
                           EdgeLabelsDrawingMode="Shift">
                                        <chart:CategoryAxis.MajorGridLineStyle>
                                            <chart:ChartLineStyle StrokeWidth="1"/>
                                        </chart:CategoryAxis.MajorGridLineStyle>
                                    </chart:CategoryAxis>
                                </chart:SfCartesianChart.XAxes>

                                <chart:SfCartesianChart.YAxes>
                                    <chart:NumericalAxis Minimum="0"
                            Maximum="{Binding YAxisMaximum}"
                            Interval="2"
                            ShowMajorGridLines="True">
                                        <chart:NumericalAxis.MajorGridLineStyle>
                                            <chart:ChartLineStyle StrokeWidth="1"/>
                                        </chart:NumericalAxis.MajorGridLineStyle>
                                    </chart:NumericalAxis>
                                </chart:SfCartesianChart.YAxes>

                                <chart:SfCartesianChart.Series>
                                    <chart:LineSeries ItemsSource="{Binding AchievementTrendData}"
                         XBindingPath="Label"
                         YBindingPath="Achievement"
                         ShowDataLabels="True">
                                        <chart:LineSeries.Fill>
                                            <SolidColorBrush Color="#4CAF50"/>
                                        </chart:LineSeries.Fill>
                                    </chart:LineSeries>
                                </chart:SfCartesianChart.Series>
                            </chart:SfCartesianChart>

                        </Grid>
                    </Border>
                </Grid>

                <!-- Sales Leaderboard -->
                <Border Stroke="#E5E7EB"
                        StrokeThickness="1"
                        BackgroundColor="White">
                    <VerticalStackLayout Padding="15">
                        <Label Text="Sales Leaderboard"
                               TextColor="#1A1A1A"
                               FontSize="16"
                               FontAttributes="Bold"
                               Margin="0,0,0,15"/>

                        <Grid ColumnDefinitions="2*,*,*,*" 
                              Padding="15,10"
                              BackgroundColor="#F9FAFB">
                            <Label Grid.Column="0" 
                                   Text="Sales Rep" 
                                   TextColor="#666666"/>
                            <Label Grid.Column="1" 
                                   Text="Achievement" 
                                   TextColor="#666666"/>
                            <Label Grid.Column="2" 
                                   Text="Commission" 
                                   TextColor="#666666"/>
                            <Label Grid.Column="3" 
                                   Text="Achievement %" 
                                   TextColor="#666666"/>
                        </Grid>

                        <CollectionView ItemsSource="{Binding Leaderboard}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:SalesRepPerformance">
                                    <Grid ColumnDefinitions="2*,*,*,*" 
                                          Padding="15,12">
                                        <Label Grid.Column="0" Text="{Binding SalesRep}"/>
                                        <Label Grid.Column="1" Text="{Binding Achievement, StringFormat='${0:N0}'}"/>
                                        <Label Grid.Column="2" Text="{Binding Commission, StringFormat='${0:N0}'}"/>
                                        <Label Grid.Column="3" Text="{Binding AchievementPercentage, StringFormat='{0:N1}%'}"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Indicator -->
        <Grid Grid.RowSpan="2" 
              BackgroundColor="#80000000"
              IsVisible="{Binding IsLoading}">
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                             HorizontalOptions="Center" 
                             VerticalOptions="Center"/>
        </Grid>
    </Grid>
</ContentPage>