<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ScoreCard.ViewModels"
             xmlns:models="clr-namespace:ScoreCard.Models"
             xmlns:converts="clr-namespace:ScoreCard.Converts"
             x:Class="ScoreCard.Views.DashboardPage"
             x:DataType="viewmodels:DashboardViewModel"
             Title="Dashboard">

    <ContentPage.Resources>
        <converts:ProgressWidthConverter x:Key="ProgressWidthConverter"/>
        <converts:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="24">
            <!-- 頂部選擇器和時間 -->
            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="16">
                <Picker Title="Pick an option"
                        ItemsSource="{Binding Options}"
                        SelectedItem="{Binding SelectedOption}"/>

                <!-- Edit Mode Toggle and Save Button -->
                <Button Grid.Column="1"
                        Text="Edit Target"
                        Command="{Binding ToggleEditModeCommand}"
                        BackgroundColor="#FF3B30"
                        TextColor="White"
                        IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"
                        Padding="10,5" />

                <HorizontalStackLayout Grid.Column="1" Spacing="10" IsVisible="{Binding IsEditMode}">
                    <Button Text="Save"
                            Command="{Binding SaveChangesCommand}"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            Padding="10,5" />
                    <Button Text="Cancel"
                            Command="{Binding CancelEditingCommand}"
                            BackgroundColor="#607D8B"
                            TextColor="White"
                            Padding="10,5" />
                    <Button Text="Reset"
                            Command="{Binding ResetQuarterlyTargetsCommand}"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            Padding="10,5" />
                </HorizontalStackLayout>

                <Label Grid.Column="2" 
                       Text="{Binding LastUpdated, StringFormat='Last Updated: {0}'}"
                       TextColor="#6B7280"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- 年度總覽區塊 -->
            <VerticalStackLayout Spacing="16">
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="16">
                    <!-- Annual Target -->
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Annual Margin Target" 
                               TextColor="#6B7280" 
                               FontSize="14"/>
                        <!-- Editable Annual Target when in edit mode -->
                        <Grid>
                            <Label Text="{Binding AnnualTargetDisplay}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                            <Entry Text="{Binding AnnualTarget}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Keyboard="Numeric"
                                   IsVisible="{Binding IsEditMode}"/>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Achievement -->
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Achieved" 
                               TextColor="#6B7280" 
                               FontSize="14"/>
                        <Label Text="{Binding TotalAchievedDisplay}"
                               TextColor="#EF4444"
                               FontSize="24"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <!-- Remaining -->
                    <VerticalStackLayout Grid.Column="2">
                        <Label Text="Remaining" 
                               TextColor="#6B7280" 
                               FontSize="14"/>
                        <Label Text="{Binding RemainingDisplay}"
                               FontSize="24"
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Grid>

                <!-- Progress Bar -->
                <Border Padding="0" 
        HeightRequest="4" 
        BackgroundColor="#F3F4F6"
        Stroke="Transparent"
        StrokeShape="RoundRectangle 2"
        StrokeThickness="0">
                    <BoxView Color="#EF4444" 
             HorizontalOptions="Start"
             WidthRequest="{Binding AchievementProgress, Converter={StaticResource ProgressWidthConverter}}"/>
                </Border>

                <!-- Progress Labels -->
                <Grid ColumnDefinitions="*,*,*">
                    <Label Text="{Binding AchievementDisplay}"
                           TextColor="OrangeRed"
                           FontSize="20"/>
                    <Label Grid.Column="1" 
                           Text="{Binding NotInvoicedDisplay}"
                           TextColor="OrangeRed"
                           FontSize="20"
                           HorizontalOptions="Center"/>
                    <Label Grid.Column="2" 
                           Text="{Binding InProgressDisplay}"
                           TextColor="OrangeRed"
                           FontSize="20"
                           HorizontalOptions="End"/>
                </Grid>
            </VerticalStackLayout>

            <!-- Quarterly Performance -->
            <VerticalStackLayout Spacing="16">
                <Label Text="Quarterly Performance" 
                       FontSize="16"
                       FontAttributes="Bold"/>

                <Grid ColumnDefinitions="*,*,*,*" 
                      ColumnSpacing="16"
                      HeightRequest="220">
                    <!-- Q1 -->
                    <Border Grid.Column="0"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <!-- Header with Achievement % -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="Q1" 
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Grid.Column="1"
                                       Text="{Binding Q1AchievementDisplay}"
                                       TextColor="#EF4444"
                                       HorizontalOptions="End"
                                       FontSize="16"/>
                            </Grid>

                            <!-- Target -->
                            <VerticalStackLayout Spacing="4">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Label Text="Target:" 
                                           FontAttributes="Bold"
                                           FontSize="14"/>
                                    <!-- Editable Q1 Target -->
                                    <Grid Grid.Column="1" HorizontalOptions="End">
                                        <Label Text="{Binding Q1TargetDisplay}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        <Entry Text="{Binding Q1Target}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               Keyboard="Numeric"
                                               WidthRequest="120"
                                               HorizontalTextAlignment="End"
                                               IsVisible="{Binding IsEditMode}"/>
                                    </Grid>
                                </Grid>
                                <Label Text="{Binding Q1BaseDisplay}"
                                       FontSize="12"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <!-- Achieved -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Achieved:" 
                                       FontSize="14"/>
                                <Label Text="{Binding Q1AchievedDisplay}"
                                       TextColor="#EF4444"
                                       FontSize="14"/>
                            </VerticalStackLayout>

                            <!-- Carried -->
                            <Label Text="{Binding Q1CarriedDisplay}"
                                   TextColor="#6B7280"
                                   FontSize="12"
                                   IsVisible="{Binding Q1Carried, Converter={StaticResource GreaterThanZeroConverter}}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Q2 -->
                    <Border Grid.Column="1"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <!-- Header with Achievement % -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="Q2" 
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Grid.Column="1"
                                       Text="{Binding Q2AchievementDisplay}"
                                       TextColor="#10B981"
                                       HorizontalOptions="End"
                                       FontSize="16"/>
                            </Grid>

                            <!-- Target -->
                            <VerticalStackLayout Spacing="4">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Label Text="Target:" 
                                           FontAttributes="Bold"
                                           FontSize="14"/>
                                    <!-- Editable Q2 Target -->
                                    <Grid Grid.Column="1" HorizontalOptions="End">
                                        <Label Text="{Binding Q2TargetDisplay}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        <Entry Text="{Binding Q2Target}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               Keyboard="Numeric"
                                               WidthRequest="120"
                                               HorizontalTextAlignment="End"
                                               IsVisible="{Binding IsEditMode}"/>
                                    </Grid>
                                </Grid>
                                <Label Text="{Binding Q2BaseDisplay}"
                                       FontSize="12"
                                       TextColor="#6B7280"/>
                                <Label Text="{Binding Q1CarriedAddedDisplay}"
                                       TextColor="#10B981"
                                       FontSize="12"
                                       IsVisible="{Binding Q1Carried, Converter={StaticResource GreaterThanZeroConverter}}"/>
                            </VerticalStackLayout>

                            <!-- Achieved -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Achieved:" 
                                       FontSize="14"/>
                                <Label Text="{Binding Q2AchievedDisplay}"
                                       TextColor="#10B981"
                                       FontSize="14"/>
                            </VerticalStackLayout>

                            <!-- Exceeded -->
                            <Label Text="{Binding Q2ExceededDisplay}"
                                   TextColor="#10B981"
                                   FontSize="12"
                                   IsVisible="{Binding Q2Exceeded, Converter={StaticResource GreaterThanZeroConverter}}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Q3 -->
                    <Border Grid.Column="2"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <!-- Header with Achievement % -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="Q3" 
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Grid.Column="1"
                                       Text="{Binding Q3AchievementDisplay}"
                                       TextColor="#EF4444"
                                       HorizontalOptions="End"
                                       FontSize="16"/>
                            </Grid>

                            <!-- Target -->
                            <VerticalStackLayout Spacing="4">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Label Text="Target:" 
                                           FontAttributes="Bold"
                                           FontSize="14"/>
                                    <!-- Editable Q3 Target -->
                                    <Grid Grid.Column="1" HorizontalOptions="End">
                                        <Label Text="{Binding Q3TargetDisplay}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        <Entry Text="{Binding Q3Target}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               Keyboard="Numeric"
                                               WidthRequest="120"
                                               HorizontalTextAlignment="End"
                                               IsVisible="{Binding IsEditMode}"/>
                                    </Grid>
                                </Grid>
                                <Label Text="{Binding Q3BaseDisplay}"
                                       FontSize="12"
                                       TextColor="#6B7280"/>
                                <Label Text="{Binding Q2CarriedAddedDisplay}"
                                       TextColor="#10B981"
                                       FontSize="12"
                                       IsVisible="{Binding Q2Carried, Converter={StaticResource GreaterThanZeroConverter}}"/>
                            </VerticalStackLayout>

                            <!-- Achieved -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Achieved:" 
                                       FontSize="14"/>
                                <Label Text="{Binding Q3AchievedDisplay}"
                                       TextColor="#EF4444"
                                       FontSize="14"/>
                            </VerticalStackLayout>

                            <!-- Carried -->
                            <Label Text="{Binding Q3CarriedDisplay}"
                                   TextColor="#6B7280"
                                   FontSize="12"
                                   IsVisible="{Binding Q3Carried, Converter={StaticResource GreaterThanZeroConverter}}"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Q4 -->
                    <Border Grid.Column="3"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <!-- Header with Achievement % -->
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="Q4" 
                                       FontAttributes="Bold"
                                       FontSize="16"/>
                                <Label Grid.Column="1"
                                       Text="{Binding Q4AchievementDisplay}"
                                       TextColor="#EF4444"
                                       HorizontalOptions="End"
                                       FontSize="16"/>
                            </Grid>

                            <!-- Target -->
                            <VerticalStackLayout Spacing="4">
                                <Grid ColumnDefinitions="Auto,*">
                                    <Label Text="Target:" 
                                           FontAttributes="Bold"
                                           FontSize="14"/>
                                    <!-- Editable Q4 Target -->
                                    <Grid Grid.Column="1" HorizontalOptions="End">
                                        <Label Text="{Binding Q4TargetDisplay}"
                                               FontAttributes="Bold"
                                               FontSize="14"
                                               IsVisible="{Binding IsEditMode, Converter={StaticResource InverseBoolConverter}}"/>

                                        <Entry Text="{Binding Q4Target}"
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               Keyboard="Numeric"
                                               WidthRequest="120"
                                               HorizontalTextAlignment="End"
                                               IsVisible="{Binding IsEditMode}"/>
                                    </Grid>
                                </Grid>
                                <Label Text="{Binding Q4BaseDisplay}"
                                       FontSize="12"
                                       TextColor="#6B7280"/>
                                <Label Text="{Binding Q3CarriedAddedDisplay}"
                                       TextColor="#10B981"
                                       FontSize="12"
                                       IsVisible="{Binding Q3Carried, Converter={StaticResource GreaterThanZeroConverter}}"/>
                            </VerticalStackLayout>

                            <!-- Achieved -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Achieved:" 
                                       FontSize="14"/>
                                <Label Text="{Binding Q4AchievedDisplay}"
                                       TextColor="#EF4444"
                                       FontSize="14"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>

            <!-- Key Notifications -->
            <VerticalStackLayout Spacing="16">
                <Label Text="Key Notifications" 
                       FontSize="16"
                       FontAttributes="Bold"/>

                <CollectionView ItemsSource="{Binding Notifications}"
                                EmptyView="No notifications">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:NotificationItem">
                            <Border Margin="0,0,0,8"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 8"
                                    BackgroundColor="#EFF6FF">
                                <Label Text="{Binding Message}"
                                       Padding="16"
                                       TextColor="#1D4ED8"/>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- Status Message -->
            <Border IsVisible="{Binding IsStatusMessageVisible}"
                    Stroke="#E5E7EB"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 8"
                    BackgroundColor="{Binding IsStatusSuccess, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#D1FAE5,#FEE2E2'}"
                    Padding="16">
                <Label Text="{Binding StatusMessage}"
                       TextColor="{Binding IsStatusSuccess, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#065F46,#991B1B'}"
                       HorizontalOptions="Center"/>
            </Border>

            <!-- Loading Indicator -->
            <Grid IsVisible="{Binding IsLoading}" BackgroundColor="#80000000" HorizontalOptions="Fill" VerticalOptions="Fill">
                <ActivityIndicator IsRunning="True" Color="#FF3B30" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>